         <tooltip>
            <Tooltip text="Minimize" />
         </tooltip>
      </JFXButton>
      <JFXButton id="btnMaximize_SizeDown" maxHeight="20.0" maxWidth="35.0" minHeight="20.0" minWidth="20.0" onAction="#maximize_sizeDown" prefHeight="20.0" prefWidth="35.0">
