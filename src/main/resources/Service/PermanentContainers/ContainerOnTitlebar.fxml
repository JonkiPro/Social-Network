            <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/maximize.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <HBox.margin>
            <Insets right="3.0" />
         </HBox.margin>
         <tooltip>
            <Tooltip text="Maximize/Resize" />
         </tooltip>
      </JFXButton>
      <JFXButton id="btnExit" maxHeight="20.0" maxWidth="35.0" minHeight="20.0" minWidth="20.0" onAction="#exit" prefHeight="20.0" prefWidth="35.0" text="Button">
         <graphic>
            <ImageView id="btnRegister" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/exit.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <HBox.margin>
            <Insets right="4.0" />
         </HBox.margin>
         <tooltip>
            <Tooltip text="Exit" />
         </tooltip>
      </JFXButton>
   </children>
</HBox>
